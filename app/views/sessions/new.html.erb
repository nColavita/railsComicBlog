<div class="centerForm">
	<div class="mainFormBlock">
		<div class="form-style-6">
			<br><h3 class="formTitle">Log in!</h3>

				<%= form_tag "/sessions", method: :post do %>
				    <p>
				        <%= label_tag :email %>
				        <%= text_field_tag :email %>
				    </p>
				    <p>
				        <%= label_tag :password %>
				        <%= password_field_tag :password %>
				    </p>
				    <p>
				        <%= submit_tag "log in" %>
				    </p>

				<% end %>
				
			</form>
		</div>
	</div>
</div>